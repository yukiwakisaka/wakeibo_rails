<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_url, class: 'navbar-brand' do %>
        <b>BuyPlan</b>
      <% end %>
    </div>
    <% if logged_in? %>
      <ul class="nav nav-pills pull-right" style="padding: 5px 0;">
        <li>
          <%= link_to 'Log out', logout_path, class: 'btn btn-danger', :method => :delete %>
        </li>
      </ul>
    <% else %>
      <div id="navbar" class="navbar-collapse collapse" aria-expanded="false">
        <%= form_for :session, url: login_path, :html => {class: 'navbar-form navbar-right'} do |f| %>
          <div class="form-group">
            <%= f.text_field :key, placeholder: 'User ID', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, placeholder: 'User Password', class: 'form-control' %>
          </div>
          <%= f.submit 'Sign in', class: 'btn btn-primary' %>
          <%=link_to 'Sign up', sign_up_path, class: 'btn btn-success' %>
        <% end %>
      </div>
    <% end %>
  </div>
</nav>